package {		import flash.display.*;		public class ReadXML extends Sprite {				private var book:XML;				public function ReadXML() {			createBasicStructure();			readByName();		}		private function createBasicStructure() {			book =	<book>						<publisher name="O'Reilly" />						<title>Learning ActionScript 3.0</title>						<subject>ActionScript</subject>						<authors>							<author>								<firstname>Rich</firstname>								<lastname>Shupe</lastname>							</author>							<author>								<firstname>Zevan</firstname>								<lastname>Rosser</lastname>							</author>						</authors>					</book>;		}				private function readByName() {			trace(book.title);			trace(book.authors.author);			trace(book.authors.author.firstname[0]);			trace(book..firstname);			trace(book..author);			trace(book..author.*);						trace(book.title.nodeKind());			trace(book.title.text().nodeKind());			trace(book.title.text() is XMLList);			trace(book.title.text() is String);			trace(book.title.text().toString() is String);						trace(book.publisher.@name);			trace(book.publisher.attributes()[0]);			trace(book.publisher.@*[0]);		}	}}